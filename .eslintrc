{
    "extends": "eslint:recommended",
    "env": {
        "node": true,
        "browser": true,
        "es6": true,
        "jest": true
    },
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 9
    },
    "rules": {
        "comma-dangle": ["error", "never"],
        "indent": ["error", 4, { "SwitchCase": 1 }],
        "no-cond-assign": "off",
        "semi": ["error", "always"],
        "no-unused-vars": "off",
        "no-control-regex": "off",
        "no-console": "off",
        "no-constant-condition": "off"
    }
}
